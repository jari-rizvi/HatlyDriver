<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_270sdp"
            android:layout_margin="@dimen/_20sdp"
            android:background="@drawable/card_background_green"
            android:backgroundTint="@color/white"
            android:elevation="@dimen/_1sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.49"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <ImageView
                android:id="@+id/textView54"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_90sdp"
                android:src="@drawable/successful"
                app:layout_constraintBottom_toTopOf="@+id/tv_title_text"
                app:layout_constraintTop_toBottomOf="@+id/imageView19"
                tools:layout_editor_absoluteX="0dp" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_15sdp"
                android:gravity="center"
                android:text="Use your new password to login."
                android:textColor="@color/colorPrimaryDark"
                style="@style/open_sans_regular_medium"
                android:textSize="@dimen/_13ssp"
                app:layout_constraintEnd_toEndOf="@+id/tv_title_text"
                app:layout_constraintStart_toStartOf="@+id/tv_title_text"
                app:layout_constraintTop_toBottomOf="@+id/tv_title_text" />

            <ImageView
                android:id="@+id/imageView19"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.97"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.05"
                app:srcCompat="@drawable/cancel"
                app:tint="@color/redd" />

            <TextView
                android:id="@+id/tv_title_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textStyle="bold"
                android:text="Password Changed Successfully!"
                android:textSize="@dimen/_16ssp"
                style="@style/open_sans_secondary_regular_large_red"
                app:layout_constraintBottom_toTopOf="@+id/tv_title"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView54" />

            <TextView
                android:id="@+id/btnvverify"
                android:layout_width="@dimen/_220sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginVertical="@dimen/_25sdp"
                android:elevation="@dimen/_1sdp"
                android:maxLines="3"
                android:background="@drawable/card_background_green"
                android:gravity="center"
                android:paddingVertical="@dimen/_7sdp"
                android:text="Verify"
                android:textColor="@color/white"
                android:textSize="@dimen/_16ssp"
                android:textAlignment="center"
                android:textStyle="normal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_title" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>



</layout>